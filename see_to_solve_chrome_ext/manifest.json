{
    "name": "See_to_solve",
    "version": "1.0",
    "description": "Take screenshots",
    "manifest_version": 3,
    "permissions": [
        "activeTab", "scripting"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_title": "Take a Screenshot",
        "default_icon": {
          "16": "/assets/icon-16.png",
          "48": "/assets/icon-48.png",
          "128": "/assets/icon-128.png"
        }
    },
    "icons": {
        "16": "/assets/icon-16.png",
        "32": "/assets/icon-32.png",
        "48": "/assets/icon-48.png",
        "128": "/assets/icon-128.png"
    },
    "host_permissions": [
        "https://chess.com/*",
        "https://*.chess.com/*",
        "https://lichess.org/*",
        "https://*.lichess.org/*",
        "http://localhost:5000/",
        "http://jonparis.pythonanywhere.com/"
    ],
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["popup.js"]
        }
    ]
}